{
    "name": "eddir/messenger",
    "description": "Multi-group messenger for Laravel 9 Vue 2",
    "keywords": [
        "eddir",
        "chat",
        "messenger"
    ],
    "homepage": "https://github.com/eddir/messenger",
    "license": "GPL-2.0-or-later",
    "type": "library",
    "authors": [
        {
            "name": "Eduard Rostkov",
            "email": "ea@rostkov.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0",
        "pusher/pusher-php-server": "^7.0",
        "lasserafn/php-initial-avatar-generator": "^4.2.1",
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Eddir\\Messenger\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eddir\\Messenger\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Eddir\\Messenger\\MessengerServiceProvider"
            ],
            "aliases": {
                "Chat": "Eddir\\Messenger\\MessengerFacade"
            }
        }
    }
}
